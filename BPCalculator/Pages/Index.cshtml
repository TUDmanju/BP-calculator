@page
@model BPCalculator.Pages.IndexModel

@{
    ViewData["Title"] = "BP Category Calculator";
}

<h2>BP Category Calculator</h2>

<form method="post">
    <div class="form-group">
        <label>Systolic</label>
        <input asp-for="BloodPressure.Systolic" class="form-control" />
        <span asp-validation-for="BloodPressure.Systolic" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Diastolic</label>
        <input asp-for="BloodPressure.Diastolic" class="form-control" />
        <span asp-validation-for="BloodPressure.Diastolic" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<hr />

@if (Model.BloodPressure != null)
{
    <h4>@Model.BloodPressure.Category</h4>

    <p class="text-info">
        <strong>Risk Message:</strong> @Model.BloodPressure.RiskMessage
    </p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
